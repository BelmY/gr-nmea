<?xml version="1.0"?>
<block>
	<name>nmea_serial</name>
	<key>gps_nmea_serial</key>
	<category>gps</category>
	<import>import gps</import>
	<make>gps.nmea_serial($device, $speed)</make>
	<param>
		<name>device</name>
		<key>device</key>
		<value>/dev/ttyUSB0</value>
		<type>string</type>
	</param>
	<param>
		<name>speed</name>
		<key>speed</key>
		<value>4800</value>
		<type>int</type>
	</param>

	<source>
		<name>out</name>
		<type>byte</type>
		<vlen>$vlen</vlen>
	</source>
	<source>
		<name>gps_msg</name>
		<type>message</type>
		<optional>1</optional>
	</source>
</block>
